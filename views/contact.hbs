<h2>Contact me</h2>

{{#if imgSrc}}
  <div class='isSent' style='text-align: center;'>
    <img
      style='height: 50px; margin: auto;'
      src='data:image/png;base64, {{imgSrc}}'
    />
  </div>
{{/if}}

{{#if isError}}
  <div class='isError'>You can't leave fields empty!</div>
{{/if}}

<form
  action='/contact/send-message'
  method='POST'
  enctype='multipart/form-data'
>
  <label>
    Your name:
    <input type='text' name='author' />
  </label>
  <label>
    Your email:
    <input type='email' name='sender' />
  </label>
  <label>
    Title:
    <input type='text' name='title' />
  </label>
  <label>
    Message:
    <textarea name='message'></textarea>
  </label>
  <input name='file' type='file' accept='.png, .jpg, .jpeg, .gif' />
  <button type='submit'>Send message</button>
</form>